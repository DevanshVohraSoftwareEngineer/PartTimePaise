# .env.example
let
# App
NODE_ENV=development
PORT=5000
CLIENT_URL=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/parttimepaise
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_REFRESH_SECRET=your-refresh-secret-change-this
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Razorpay
RAZORPAY_KEY_ID=rzp_test_xxxxx
RAZORPAY_KEY_SECRET=your_secret
RAZORPAY_WEBHOOK_SECRET=whsec_xxxxx

# AWS S3
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret
AWS_REGION=ap-south-1
AWS_S3_BUCKET=parttimepaise-uploads

# OR Cloudinary
CLOUDINARY_CLOUD_NAME=your_cloud
CLOUDINARY_API_KEY=your_key
CLOUDINARY_API_SECRET=your_secret

# Email (SendGrid)
SENDGRID_API_KEY=SG.xxxxx
FROM_EMAIL=noreply@parttimepaise.com

# SMS (MSG91)
MSG91_AUTH_KEY=your_auth_key
MSG91_SENDER_ID=PTPAIS
MSG91_ROUTE=4

# Google Maps (Optional)
GOOGLE_MAPS_API_KEY=your_key

# Mapbox (Preferred)
MAPBOX_ACCESS_TOKEN=pk.xxxxx

# Firebase (Push Notifications)
FIREBASE_PROJECT_ID=your_project
FIREBASE_PRIVATE_KEY=your_key
FIREBASE_CLIENT_EMAIL=your_email

# Sentry
SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
MIXPANEL_TOKEN=your_token

# Plagiarism (Optional)
COPYSCAPE_USERNAME=your_username
COPYSCAPE_API_KEY=your_key

# Admin
ADMIN_EMAIL=admin@parttimepaise.com
ADMIN_PASSWORD=change-this-strong-password

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Platform Settings
PLATFORM_COMMISSION_RATE=0.15
MIN_WALLET_AMOUNT=100
MAX_WALLET_AMOUNT=50000
AUTO_RELEASE_HOURS=24
MAX_REVISIONS=2